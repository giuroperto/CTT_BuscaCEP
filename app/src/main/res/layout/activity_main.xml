<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity">

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BUSCAR LOCAL"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="34sp"
        android:gravity="center"
        android:layout_marginTop="50dp"
        />

    <ImageView
        android:id="@+id/img_map"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/ic_map"
        app:layout_constraintTop_toBottomOf="@id/txt_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginVertical="40dp"
        />

    <TextView
        android:id="@+id/txt_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Selecione a opcao desejada:"
        app:layout_constraintTop_toBottomOf="@+id/img_map"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_margin="20dp"
        />

    <Button
        android:id="@+id/btn_address"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="BUSCAR POR ENDERECO"
        app:layout_constraintTop_toBottomOf="@+id/txt_description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginVertical="20dp"
        />

    <Button
        android:id="@+id/btn_cep"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="BUSCAR POR CEP"
        app:layout_constraintTop_toBottomOf="@id/btn_address"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginVertical="20dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>

